<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout android:background="@color/white" tools:context=".activities.SplashScreenActivity" android:layout_height="match_parent" android:layout_width="match_parent" xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto" android:id="@+id/consLL" xmlns:android="http://schemas.android.com/apk/res/android">

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/splashDuck"
        android:layout_width="wrap_content"
        android:layout_height="228dp"
        android:layout_marginTop="@dimen/_100sdp"
        android:background="#fff"
        android:src="@drawable/splashduckfinal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/swipeButton"
        android:layout_below="@+id/splashDuck"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="@dimen/_20sdp"
        android:fontFamily="@font/ruthie"
        android:text="@string/life_goes_on"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="@dimen/_25ssp" />

    <com.ebanx.swipebtn.SwipeButton
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/swipeButton"
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:layout_alignParentBottom="true"
        app:inner_text_top_padding="18dp"
        app:inner_text_size="16sp"
        android:hapticFeedbackEnabled="true"
        app:inner_text_color="@color/ic_app_logo_background"
        app:inner_text_bottom_padding="18dp"
        app:inner_text="Swipe to enter app"
        app:button_top_padding="20dp"
        app:button_right_padding="20dp"
        app:button_left_padding="20dp"
        app:button_image_enabled="@drawable/ic_arrow_dark"
        app:button_image_disabled="@drawable/ic_arrow"
        app:button_bottom_padding="20dp"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>