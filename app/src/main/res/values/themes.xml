<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.ViaKhat.NoTitle" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="windowNoTitle">false</item>
    </style>
    <style name="Theme.ViaKhat" parent="Theme.MaterialComponents.Light">
        <item name="android:windowLightStatusBar">true</item>
        <!-- Primary brand color. -->
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/primary</item>



        <!--        Circular Reveal -->
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <!--        Enabling transitions-->
        <item name="android:windowActivityTransitions">true</item>
        <!--        Setup enter and exit transition-->
        <item name="android:windowEnterTransition">@transition/trans_signup</item>
        <item name="android:windowExitTransition">@transition/trans_signup</item>

        <item name="android:windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:navigationBarColor">@color/white</item>
    </style>


        <style name="TextEdit">

            <item name="singleLine">true</item>
            <item name="android:singleLine">true</item>
            <item name="android:layout_width">match_parent</item>
            <item name="android:layout_height">wrap_content</item>
            <item name="android:background">@null</item>
            <item name="android:textSize">@dimen/_12ssp</item>
            <item name="android:fontFamily">@font/bonbon</item>
            <item name="android:textColor">@color/white</item>
        </style>

        <style name="InputLayout.Margins">
            <item name="android:layout_marginStart">16dp</item>
            <item name="android:layout_marginEnd">16dp</item>
        </style>

        <style name="InputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
            <item name="errorIconTint">@color/error</item>
            <item name="boxStrokeErrorColor">@color/error</item>
            <item name="errorTextColor">@color/error</item>
            <item name="helperTextTextColor">@color/primary_text</item>
            <item name="android:layout_width">match_parent</item>
            <item name="errorEnabled">true</item>
            <item name="android:textSize">@dimen/_12ssp</item>
            <item name="strokeColor">@color/primary_text</item>
            <item name="android:layout_height">wrap_content</item>
            <item name="android:layout_marginTop">@dimen/_10sdp</item>
            <item name="android:textColorHint">@color/primary_text</item>
            <item name="boxCornerRadiusTopStart">@dimen/corners_input</item>
            <item name="boxCornerRadiusBottomEnd">@dimen/corners_input</item>
            <item name="boxCornerRadiusBottomStart">@dimen/corners_input</item>
            <item name="boxCornerRadiusTopEnd">@dimen/corners_input</item>
            <item name="boxBackgroundMode">outline</item>
            <item name="boxStrokeWidthFocused">1dp</item>
            <item name="hintTextColor">@color/primary_text</item>
            <item name="hintAnimationEnabled">true</item>
            <item name="boxStrokeColor">@color/primary_dark</item>
            <item name="boxStrokeWidth">2dp</item>
            <item name="hintEnabled">true</item>
            <item name="boxBackgroundColor">#1AFFFFFF</item>
        </style>

</resources>